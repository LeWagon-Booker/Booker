
<div id="center-bloc">
  <h2 id="sign-up">Sign up</h2>

  <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= f.error_notification %>
<div class="form-group">
      <div class="form-inputs">
        <div class="row">
          <div class="col-6 form-group">
              <%= f.input :first_name,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "first name" },class:"form-control",placeholder:"Harry"  %>
          </div>
          <div class="col-6 form-group">
              <%= f.input :last_name,
                          required: true,
                          autofocus: true,
                          input_html: { autocomplete: "last name" },class:"form-control",placeholder:"Potter"%>
          </div>
        </div>
          <div class="row">
             <div class="col-12 form-group">
                <%= f.input :username,
                              required: false,
                              autofocus: true,
                              input_html: { autocomplete: "user name" } ,class:"form-control",placeholder:"harry-potter"%>
             </div>
           </div>
          <div class="row">
             <div class="col-12 form-group">
                <%= f.input :email,
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "email" },class:"form-control",placeholder:"jkrowling@magic.com"%>
            </div>
          </div>
          <div class="row">
             <div class="col-12 form-group">
                <%= f.input :avatar,
                            required: true,
                            autofocus: true,
                            input_html: { autocomplete: "email" }%>
            </div>
           </div>
          <div class="row">
            <div class="col-12 form-group">
                   <%= f.input :password,
                                required: true,
                                hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                                input_html: { autocomplete: "new-password" },class:"form-control",placeholder:"*****" %>
          </div>
        </div>
        <div class="row">
           <div class="col-12 form-group">
              <%= f.input :password_confirmation,
                          required: true,
                          input_html: { autocomplete: "new-password" },class:"form-control",placeholder:"*****" %>
          </div>
        </div>
      </div>

      <div class="form-actions">
      <a class="btn-signup" href="#">Sign up</a>
      </div>
  <% end %>
</div>
<%= render "devise/shared/links" %>
</div>
