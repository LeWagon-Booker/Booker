<h1 class="py-4">Let's <i class="fas fa-search" style="color:$blue; font-size: 1.2em"></i> in your friends libraries!</h1>
<% unless @user_families.empty?  %>
<div id="filter" class="d-flex flex-column justify-content-center">
  <div class="text-center d-flex justify-content-around align-items-center w-50 p-3">
    <h5 class="mb-0">Family filters</h5>
    <% @user_families.each do |family| %>
      <p class="mb-0"><%= link_to family.name, books_path(:family => family.id) %></p>
    <% end %>
  </div>
</div>
<% end %>
<br>
<% if @no_result == true %>
  <div class="p-3 mb-2 bg-warning text-dark"><strong>Hey you</strong> Your search gave no result!</div>
<% end %>
<% if @books.empty? %>
  <h2>You have currently no books in your library!</h2>
<% else %>
  <div class="cards">
    <% @books.each do |book| %>
      <%= link_to book_path(book) do %>
        <div class="card-category text-center"  style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0)), url(<%= cl_image_path book.cover.key %>)">
          <div class="content py-4 d-flex justify-content-between flex-column">
            <h3 class="book-info"><%= book.title %></h3>
            <h5 class="book-info">by <%= book.author %></h5>
            <h5 class="book-info"><%= book.category.name %></h5>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
<% end %>

