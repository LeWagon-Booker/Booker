<h1>The books!</h1>
<div class="cards">
  <% @books.each do |book| %>

    <%= link_to book_path(book) do %>
      <div class="card-category" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= book.image_url %>)">
        <%= book.title %>
      </div>
    <% end %>
  <% end %>
</div>
