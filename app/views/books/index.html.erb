<h1>Welcome to our book collection</h1>
<br>
<br>
<% if @no_result == true %>
  <div class="p-3 mb-2 bg-warning text-dark"><strong>Holy cocktail!</strong> Your search gave no result!</div>
<% end %>
<div class="cards">
  <% @books.each do |book| %>

    <%= link_to book_path(book) do %>
      <div class="card-category text-center"  style="background-image: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0)), url(<%= cl_image_path book.cover.key %>)">
        <div class="content py-4 px-2 d-flex justify-content-between flex-column h-80">
          <h3 class="title"><%= book.title %></h3>
          <h5 class="info">by <%= book.author %></h5>
          <h5 class="info"><%= book.category.name %></h5>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
