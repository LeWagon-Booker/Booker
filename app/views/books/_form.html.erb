<%= simple_form_for book do |f| %>
  <%= f.input :title %>
  <%= f.input :author %>
  <%= f.input :year %>
  <%= f.association :category, input_html: { style: 'width: 466px', class: 'select2 form-control' } %>
  <%= f.input :cover, as: :file%>
  <%= f.input :ISBN %>
  <%= f.input :description %>
  <%= f.button :submit, class: "btn-booker" %>
<% end %>
