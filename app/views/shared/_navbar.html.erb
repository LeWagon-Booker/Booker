<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <%= link_to books_path, class: "navbar-brand" do %>
    <%= cl_image_tag 'Booker_Logo' %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <div class="navbar-nav mr-auto d-flex align-items-center">
      <% if user_signed_in? %>
        <form class="form-inline my-2 my-lg-0" action="/books" accept-charset="UTF-8" method="get">
          <input class="form-control mr-sm-2" name="search" placeholder="Search">
<!--           <button class="" type="submit" id="search"><i class="fas fa-search" aria-hidden="true"></i></button>
          <i class="fas fa-search" aria-hidden="true"></i> -->
        </form>
        <div class="nav-item ml-3 mr-3 mt-1">
          <%= link_to "Add new book!", new_book_path , class: "btn-booker-purple px-2"%>
        </div>
        <div class="nav-item ml-3 mr-3 mt-1">
          <%= link_to "Dashboard", "/#{current_user.id}/dashboard" , class: "btn-booker-purple px-2"%>
        </div>
        <div class="nav-item dropdown">
          <% tag = 'defaultavatar' %>
          <% tag = current_user.avatar.key if current_user.avatar.attached? == true %>
          <%= cl_image_tag tag, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "My reservations", reservations_path, class: "dropdown-item" %>
            <%= link_to "My wishlist", wishlists_path, class: "dropdown-item" %>
            <%= link_to "Edit my profile", edit_user_registration_path, class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>

          </div>
        </div>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link" %>
        </li>
      <% end %>
    </div>
  </div>
</div>

<!-- add_family modal -->

<div class="modal fade" id="AddModal" tabindex="-1" role="dialog" aria-labelledby="EditModalTitle" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="EditModalLongTitle">Edit this Book!</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% @family = Family.new %>
        <%= simple_form_for @family do |f| %>
          <%= f.input :name %>
          <%= f.input :picture, as: :file%>
          <%= f.button :submit, class: "btn-booker" %>
        <% end %>
      </div>
    </div>
  </div>
</div>


